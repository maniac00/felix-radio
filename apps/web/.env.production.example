# NextAuth Configuration (Production)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_production_auth_secret_here

# Google OAuth (Production)
# Get from https://console.cloud.google.com
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret

# JWT Secret for API tokens
# Generate with: openssl rand -base64 32
# Must match JWT_SECRET in the API
JWT_SECRET=your_production_jwt_secret_here

# API Configuration (Production)
NEXT_PUBLIC_API_URL=https://felix-radio-api.7wario.workers.dev

# App URL
NEXT_PUBLIC_APP_URL=https://felix-radio.pages.dev

# Node version for Cloudflare Pages
NODE_VERSION=20
