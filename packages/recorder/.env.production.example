# Production Environment Variables for Recorder Server
# Copy to .env on Vultr VPS

# Cloudflare Workers API (Production)
WORKERS_API_URL=https://felix-radio-api.your-subdomain.workers.dev
INTERNAL_API_KEY=your_secure_random_api_key_here  # Same as Workers API

# OpenAI Whisper API
OPENAI_API_KEY=sk-proj-your_production_openai_key

# R2 Storage Configuration (Production)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_production_access_key
R2_SECRET_ACCESS_KEY=your_r2_production_secret_key
R2_BUCKET_NAME=felix-radio-recordings
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Configuration
TZ=Asia/Seoul
LOG_LEVEL=info
NODE_ENV=production
